                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Line Stroke="White" StrokeThickness="30" X1="270" X2="0"  HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Canvas.Left="677" Canvas.Top="199">
                <Line.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-38.527"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Line.RenderTransform>
            </Line>
            <Image Width="80" Height="80" HorizontalAlignment="Left" VerticalAlignment="Center" Source="../Resources/securitycheck.png" RenderTransformOrigin="0.5,0.5" Canvas.Left="731" Canvas.Top="188" >
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-37.555"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>

            <Image Width="80" Height="80" HorizontalAlignment="Left" VerticalAlignment="Center" Source="../Resources/securitycheck.png" RenderTransformOrigin="0.5,0.5" Canvas.Left="804" Canvas.Top="131" >
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-38.502"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Line Stroke="White" StrokeThickness="30" X1="270" X2="0"  HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Canvas.Left="642" Canvas.Top="413">
                <Line.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="51.576"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Line.RenderTransform>
            </Line>
            <Image Width="80" Height="80" HorizontalAlignment="Left" VerticalAlignment="Center" Source="../Resources/securitycheck.png" RenderTransformOrigin="0.5,0.5" Canvas.Left="715" Canvas.Top="342" >
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-127.203"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image Width="80" Height="80" HorizontalAlignment="Left" VerticalAlignment="Center" Source="../Resources/securitycheck.png" RenderTransformOrigin="0.5,0.5" Canvas.Left="776" Canvas.Top="414" >
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-127.203"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>

            <StackPanel Canvas.Right="150" Canvas.Top="70">
                <Image Width="80" Height="80" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,240" Source="../Resources/terminal.jpg"/>
            </StackPanel>
            <Grid/>
            <StackPanel Canvas.Right="10" Canvas.Top="10">
                <Image Width="80" Height="80" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,20" Source="../Resources/gate.png"/>
                <Image Width="80" Height="80" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,150" Source="../Resources/gate.png" />
            </StackPanel>
            <StackPanel Canvas.Right="10" Canvas.Bottom="10">
                <Image Width="80" Height="80" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,10" Source="../Resources/gate.png"/>
                <Image Width="80" Height="80" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,0" Source="../Resources/gate.png" />
            </StackPanel>
            <Image Width="80" Height="80" HorizontalAlignment="Right"  Margin="0,0,0,0" Source="../Resources/gate.png" Canvas.Right="10" Canvas.Top="10" />
            <Line Stroke="White" StrokeThickness="30" X1="90" X2="0"  HorizontalAlignment="Right" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Canvas.Right="90" Canvas.Top="95">
                <Line.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-20.687"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Line.RenderTransform>
            </Line>
            <Line Stroke="White" StrokeThickness="30" X1="88" X2="0"  HorizontalAlignment="Right" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Canvas.Right="95" Canvas.Top="152">
                <Line.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
