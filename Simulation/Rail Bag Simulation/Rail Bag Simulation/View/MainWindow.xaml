<Window x:Class="Rail_Bag_Simulation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Rail_Bag_Simulation"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="600" Width="1024">
    <Grid Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="34*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!--<Grid Grid.Column="2" Grid.RowSpan="5">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
            </Grid>-->



        <ToggleButton  HorizontalAlignment="Left" Grid.Row="2" Style="{DynamicResource MaterialDesignActionDarkToggleButton}" 
                            Margin="10,9.6,0,148" >
            <materialDesign:PackIcon Kind="Pistol" Height="24" Width="24" />
        </ToggleButton>
        <ToggleButton HorizontalAlignment="Left" Grid.Row="2" Style="{DynamicResource MaterialDesignActionDarkToggleButton}" 
                            Margin="10,101.6,0,56" >
            <materialDesign:PackIcon Kind="Cigarette" Height="24" Width="24" />
        </ToggleButton>
        <ToggleButton HorizontalAlignment="Left" Grid.Row="2" Style="{DynamicResource MaterialDesignActionDarkToggleButton}" 
                            Margin="10,53.6,0,104" >
            <materialDesign:PackIcon Kind="Flame" Height="24" Width="24" />
        </ToggleButton>
        <ToggleButton HorizontalAlignment="Left" Grid.Column="0" Grid.Row="2" Style="{DynamicResource MaterialDesignActionDarkToggleButton}" 
                            Margin="10,147.6,0,10" >
            <materialDesign:PackIcon Kind="Warning" Height="24" Width="24" />
        </ToggleButton>
        <TextBox IsReadOnly="True" Text="dataFromNadya" HorizontalAlignment="Left" materialDesign:HintAssist.Hint="Total number of bags" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Champagne &amp; Limousines" FontSize="15" Height="75" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185"/>
        <TextBox IsReadOnly="True" HorizontalAlignment="Left" materialDesign:HintAssist.Hint="Suspicious bags" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Champagne &amp; Limousines" FontSize="15" Height="75" Margin="10,9.8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Grid.Row="1"/>
        <TextBox IsReadOnly="True" HorizontalAlignment="Left" materialDesign:HintAssist.Hint="Number of bags with weapons" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Champagne &amp; Limousines" FontSize="10" Height="32" Margin="54,9.6,0,148" TextWrapping="Wrap" Width="154" Grid.Row="2"/>
        <TextBox IsReadOnly="True" HorizontalAlignment="Left" materialDesign:HintAssist.Hint="Number of bags with flammables" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Champagne &amp; Limousines" FontSize="10" Height="32" Margin="54,53.6,0,104" TextWrapping="Wrap" Width="154" Grid.Row="2"/>
        <TextBox IsReadOnly="True" HorizontalAlignment="Left" materialDesign:HintAssist.Hint="Number of bags with drugs" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Champagne &amp; Limousines" FontSize="10" Height="32" Margin="54,101.6,0,56" TextWrapping="Wrap" Width="154" Grid.Row="2"/>
        <TextBox IsReadOnly="True" HorizontalAlignment="Left" materialDesign:HintAssist.Hint="Number of bags with other" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Champagne &amp; Limousines" FontSize="10" Height="32" Margin="54,147.6,0,10" TextWrapping="Wrap" Width="154" Grid.Row="2"/>
        <Button Content="Import" Grid.Column="1" Margin="69.6,15.8,69.8,47.4" Grid.Row="4" />
        <Button Content="Export" Grid.Column="1" Margin="69.6,52.8,69.8,10.4" Grid.Row="4" RenderTransformOrigin="0.5,0.5"/>
        <Button Content="Pause" Grid.Column="2" Margin="66.2,31.8,65.2,31.4" Grid.Row="4" RenderTransformOrigin="0.5,0.5"/>
        <Button Content="Run simulation" Grid.Column="3" Margin="54.8,31.8,56.6,31.4" Grid.Row="4"></Button>
        <Button Content="Statistics" Margin="71,31.8,92,31.4" Grid.Row="4"/>
        <Canvas x:Name="canvas" Background="LightGray" Grid.Column="1" Margin="9.6,10,9.6,10.2" Grid.RowSpan="4" Grid.ColumnSpan="3">
            <Rectangle
                x:Name="cubey"
                Canvas.Top="411"
                Canvas.Right="10"
                Fill="#FFFFFF00"  
                Height="34"  
                Width="34"  
                StrokeThickness="5"  
                Stroke="#FF0000FF" Canvas.Left="700">
            </Rectangle>
            <Image Width="150" Height="150" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,200,0,0" Source="../Resources/check-in.png" ></Image>
            <Line Stroke="White" StrokeThickness="30" X1="100" X2="0"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="160,290,0,0"/>
            <Image Width="80" Height="80" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="220,280,0,0" Source="../Resources/securitycheck.png" ></Image>
            <Line Stroke="White" StrokeThickness="30" X1="100" X2="0"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="263,290,0,0"/>
            <Image Width="80" Height="80" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="355,240,0,0" Source="../Resources/storage.png" ></Image>
            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                <Image Width="80" Height="80" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,0" Source="../Resources/gate.png" />
                <Image Width="80" Height="80" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,0" Source="../Resources/gate.png" />
                <Image Width="80" Height="80" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,0" Source="../Resources/gate.png" />
            </StackPanel>
            <Image Width="80" Height="80" HorizontalAlignment="Right"  Margin="0,0,0,0" Source="../Resources/gate.png" Canvas.Right="10" Canvas.Top="10" />

        </Canvas>

    </Grid>
</Window>
