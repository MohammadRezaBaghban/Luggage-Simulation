                    </TransformGroup>
                </Line.RenderTransform>
            </Line>
            <Line Stroke="White" StrokeThickness="30" X1="90" X2="0"  HorizontalAlignment="Right" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Canvas.Right="90" Canvas.Bottom="106">
                <Line.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-20.687"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Line.RenderTransform>
            </Line>
            <Line Stroke="White" StrokeThickness="30" X1="88" X2="0"  HorizontalAlignment="Right" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Canvas.Right="98" Canvas.Bottom="50">
                <Line.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="17.637"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Line.RenderTransform>
            </Line>
            <StackPanel Canvas.Right="150" Canvas.Bottom="-170">
                <Image Width="80" Height="80" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,240" Source="../Resources/terminal.jpg" RenderTransformOrigin="0.506,2.754"/>
            </StackPanel>
        </Canvas>

    </Grid>
</Window>
