<Window x:Class="Rail_Bag_Simulation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rail_Bag_Simulation"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="600" Width="1024">
    <Grid Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="97*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="1" Grid.RowSpan="5">
            <Grid Grid.Column="2" Grid.RowSpan="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
            </Grid>
            <Grid Margin="15,15,14.6,15.2">
                <Canvas Background="LightBlue" Height="445">

                    <Image Width="150" Height="150" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,200,0,0" Source="../Resources/check-in.png" ></Image>
                    <Line Stroke="White" StrokeThickness="30" X1="100" X2="0"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="160,290,0,0"/>
                    <Image Width="80" Height="80" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="220,280,0,0" Source="../Resources/securitycheck.png" ></Image>
                    <Line Stroke="White" StrokeThickness="30" X1="100" X2="0"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="263,290,0,0"/>
                    <Image Width="80" Height="80" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="355,240,0,0" Source="../Resources/storage.png" ></Image>
                    <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Image Width="80" Height="80" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,0" Source="../Resources/gate.png" />
                        <Image Width="80" Height="80" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,0" Source="../Resources/gate.png" />
                        <Image Width="80" Height="80" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,0" Source="../Resources/gate.png" />
                    </StackPanel>
                    <Image Width="80" Height="80" HorizontalAlignment="Right"  Margin="0,0,0,0" Source="../Resources/gate.png" Canvas.Left="634" Canvas.Top="10" />

                </Canvas>
            </Grid>
        </Grid>
    </Grid>
</Window>
